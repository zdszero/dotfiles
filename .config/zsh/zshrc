# download from youtube
ytdlp_proxy="socks5://127.0.0.1:1089"
alias yt-music="yt-dlp --proxy ${ytdlp_proxy} -f \"ba\" -x --audio-format mp3"
alias yt-video="yt-dlp --proxy ${ytdlp_proxy} --write-auto-sub"

ranger-cd() {
    tempfile="$(mktemp -t tmp.XXXXXX)"
    /usr/bin/ranger --choosedir="$tempfile" "${@:-$(pwd)}"
    test -f "$tempfile" &&
    if [ "$(cat -- "$tempfile")" != "$(echo -n `pwd`)" ]; then
        cd -- "$(cat "$tempfile")"
    fi  
    rm -f -- "$tempfile"
}

mkcd() {
  mkdir $1
  cd $1
}

picin() {
  suffix=$(basename $1 | cut -d. -f2)
  xclip -selection clipboard -t image/$suffix -i $1
}

picout() {
  suffix=$(basename $1 | cut -d. -f2)
  xclip -selection clipboard -t image/$suffix -o > $1
}

print_path() {
  echo $PATH | sed 's/:/\n/g'
}

source ~/.config/zsh/fzf.zsh
