# plain slick bad-wolf gruvbox-light gruvbox-dark modern
# solarized-light solarized-dark
[theme]
name = "native"

[icons]
name = "awesome"

[[block]]
block = "net"
device = "wlp2s0"
format = "{ssid} {signal_strength} {speed_down;K*b}"
interval = 5

[[block]]
block = "disk_space"
path = "/"
info_type = "used"
format = "{icon} {used}/{total}"

[[block]]
block = "memory"
format_mem = "{mem_used}/{mem_total}"
format_swap = "{swap_used}/{swap_total}({swap_used_percents})"
display_type = "memory"
icons = true
clickable = true
interval = 5
warning_mem = 80
warning_swap = 80
critical_mem = 95
critical_swap = 95

[[block]]
block = "uptime"

[[block]]
block = "cpu"
interval = 1
format = "{barchart} {utilization}% {frequency}GHz"

[[block]]
block = "battery"
interval = 10
full_format = " full "
format = " {percentage}% {time}%"

[[block]]
block = "backlight"
device = "intel_backlight"

[[block]]
block = "sound"
step_width = 5

[[block]]
block = "time"
# format = "%A %m/%d %R  ðŸ’• ðŸ‡¹ðŸ‡¼"
format = "%A %m/%d %R"
timezone = "Asia/Shanghai"
interval = 60
locale = "zh_CN"
